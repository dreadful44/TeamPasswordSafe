{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block page_title %}
Logins
{% endblock %}

{% block page_subtitle %}
{{ group.name }}
{% endblock %}

{% block page_content %}
    <!-- Any child groups -->
    <div class="row">
        {% for child in group.children %}

            {% if loop.index is odd %}<div class="clearfix"></div>{% endif %}
            <div class="col-sm-6 col-md-4">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"><a href="{{ path('logins', {'groupid': child.id}) }}"><i class="fa fa-folder-open"></i> {{ child.name }}</a></h3>
                        {% if is_granted('admin', child) %}
                            <div class="box-tools pull-right">
                                <a href="{{ path('edit_group', {'id': child.id}) }}"><i class="fa fa-edit"></i></a>
                            </div>
                        {% endif %}
                        <div class="box-body">
                            <p>
                            {{ child.description }}
                            </p>
                            <p><strong>{% trans %}Members{% endtrans %}</strong><br/>
                            {% for user in child.users %}
                                <span data-toggle="tooltip" title="{{ user.user.email }}">
                            <img src="{{ user.user.avatar }}&s=15" class="img-rounded "/>
                                    {{ user.user.name }}

                                    {% if user.adminAccess %}
                                        <span class="badge">Admin</span>
                                    {% endif %}
                            </span><br/>
                            {% endfor %}
                            </p>

                        </div>

                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
    <!-- End Child Groups row -->

    <!-- Logins -->
    <div class="row">
        <div class="col-sm-12">

            <div class="row">
                {% for login in group.logins %}
                    {% if loop.index is odd %}<div class="clearfix"></div>{% endif %}
                    <div class="col-sm-6 col-md-4">
                        <div class="info-box" id="login_{{ login.id }}">
                            <span class="info-box-icon {{ login.url | fabrandcolor }}"><i class="fa {{ login.url | fabrand }}"></i></span>
                            <div class="info-box-content">

                                <span class="info-box-text"><a href="{{ path('edit_login', {'loginid': login.id}) }}">{{ login.name }}</a></span>
                                <span class="info-box-more">
                                    <strong>Username:</strong> {{ login.username }}<br/>
                                    <strong>Url:</strong> {{ login.url }}<br/>
                                    <strong>Password:</strong>
                                     <span class="password_hidden password" data-passwordreq="{{ path('ajaxPassword', {'id': login.id})}}">&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;</span>
                                </span>
                                <span class="info-box-more">
                                    {{ login.notes|nl2br }}
                                </span>

                            </div>
                        </div>
                    </div>

                {% endfor %}
                <a class="fab bg-green" href="{{ path('new_login', { 'groupid': group.id }) }}"><i style="" class="fa fa-plus"></i></a>

            </div>
        </div>
    </div>
    <!-- End Logins row -->

{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link type="text/css" rel="stylesheet" href="/fa-colored-icons-v1-1-0/fa-colored-brand-icons.min.css"/>
<style>
    :target {
        animation: highlight 5s ease;
    }

    @keyframes highlight {
        0% { background-color: #ffa; }
        100% { background-color: white; }
    }

    .password_hidden {
        -webkit-text-security: disc;
        -webkit-filter: blur(3px);
        -moz-filter: blur(3px);
        filter: blur(3px);
        max-width: 8em;
        overflow: hidden;
        display: inline-block;

    }

    .password {
        font-family: "Courier New", Courier, monospace;
        display: inline-block;
        white-space: nowrap;

    }

    .fa-color-icons {
        background: white !important;
    }

</style>
{% endblock %}

{% block javascripts_inline %}
    {{ parent() }}
    <script>
        $('.password').click(function() {
            if($(this).data('passwordreq')) {
                $.ajax({
                    context: this,
                    type: "GET",
                    url: $(this).data('passwordreq'),
                    dataType: "json",
                    success: function (response) {
                        $(this).html(response);
                        $(this).removeClass('password_hidden');

                        var selection = window.getSelection();
                        var range = document.createRange();
                        range.selectNodeContents(this);
                        selection.removeAllRanges();
                        selection.addRange(range);
                        //add to clipboard.
                        document.execCommand('copy');



                        return true;
                    }
                });
                $(this).removeData('passwordreq').removeAttr('data-passwordreq');

            } else {
                $(this).toggleClass('password_hidden');
            }
        })

    </script>
{% endblock %}