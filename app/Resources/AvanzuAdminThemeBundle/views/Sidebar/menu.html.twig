<!-- sidebar menu: : style can be found in sidebar.less -->
{% macro menu_item(item) %}
    {% if item.route or item.hasChildren %}
        <li id="{{ item.identifier }}" class=" {{ item.isActive ? 'active' : '' }} {{ item.hasChildren? 'treeview' : '' }}">
            <a href="{{ '/' in item.route ? item.route : path(item.route, item.routeArgs) }}">
                {% if item.icon %} <i class="{{ item.icon }}"></i> {% endif %}
                <span>{{ item.label }}</span>
                {% if item.badge %}
                    <small class="label pull-right bg-{{ item.badgeColor }}">{{ item.badge }}</small>
                {% endif %}

            {% if item.hasChildren %}<a href="#" style="display: inline-flex"><i class="fa fa-angle-left pull-right"></i></a>{% endif %}
            </a>


            {% if item.hasChildren %}
                <ul class="treeview-menu">
                    {% for child in item.children %}
                        {{ _self.menu_item(child) }}
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% else %}
        <li class="header">
            {{ item.label }}
            {% if item.badge %}
                <small class="label pull-right bg-{{ item.badgeColor }}">{{ item.badge }}</small>
            {% endif %}
        </li>
    {% endif %}
{% endmacro %}

<ul class="sidebar-menu">
    {% for item in menu %}
        {{ _self.menu_item(item) }}
    {% endfor %}
</ul>